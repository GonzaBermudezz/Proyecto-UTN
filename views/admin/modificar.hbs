<div class="container-mod" style="margin:100px 0">
    <div class="row">
        <div class="col-6 offset-3">
            <h2>MODIFICAR NOVEDADES</h2>
            <form action="/admin/novedades/modificar" method="post">
                <input type="hidden" value="{{novedad.id}}" name="id">            
                <div class="form-group">
                    <label>Titulo</label>
                    <input type="text" value="{{novedad.titulo}}" class="form-control" name="titulo">     
                </div>
                <div class="form-group">
                    <label>Subtitulo</label>
                    <input type="text" class="form-control" name="subtitulo" value="{{novedad.subtitulo}}">
                </div>
                <div class="form-group">
                    <label>Cuerpo</label>
                    <textarea class="form-control" Â¿name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
                 <div class="form-group">
                    <p>
                        <label>IMAGEN:
                            <input type="file" name="imagen" id="imagen">
                        </label>    
                    </p>
                    <p>
                        <label>
                            <input type="checkbox" name="img_delete" id= "img_delete" value="1">
                            Eliminar imagen actual
                        </label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>    
                </div>
                <button type="submit" class="btn btn-primary"> Modificar </button>
            </form>
           {{#if error}}
                <p>{{message}}</p>
            {{/if}}      
        </div>
    </div>
</div>