<div class="container" style="margin-top: 80px;">
   <div class="row">
      <p class="text-end"> Hola {{usuario}} <a class="btn btn-danger" href="/admin/login/logout">Cerrar Sesion
            <i class="fas fa-sign-out-alt"></i> </a></p>
   </div>
   <div class="row">
      <div class="col-7" style="margin-top: -9px;">
         <h2> LISTADO DE NOVEDADES </h2>
      </div>
      <div class="col-2 text-end">
         <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i>NUEVO</a>
      </div>
      <div class="col -3 text-end d-flex">
         <form class="d-flex" action="/admin/novedades" method="get">
            <input class="form-control" type="search" placeholder="Buscar" aria-label="Search" name="q"
               {{#if q}}  value="{{q}}" {{/if}}>
            <button class="btn btn-secondary my-2 my-sm-0" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
         </form>
      </div>
   </div>

   <div class="row">
      <div class="col">
         <table class="table">
            <thead>
               <tr class="table-dark">
                  <th scope="col">#</th>
                  <th scope="col">TITULO</th>
                  <th scope="col">IMAGEN</th>
                  <th scope="col" class="text-end">ACCIONES</th>
               </tr>
            </thead>
            <tbody>
               {{#each novedades}}
               <tr>
                  <th scope="row">{{id}}</th>
                  <td>{{titulo}}</td>
                  <td>{{{imagen}}}</td>
                  <td class="text-end">
                     <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i
                           class="fas fa-pencil-alt"></i></a>
                     <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i
                           class="fas fa-trash"></i></a>
                  </td>
               </tr>
               {{/each}}
            </tbody>
         </table>
         {{#if is_search}}
            {{#unless novedades.length}}
               No se encontraron resultados para "<strong>{{q}}</strong>"
            {{/unless}}
         {{/if}}      
      </div>
   </div>
</div>